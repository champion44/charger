.topImg {
  width: 90%;
  display: block;
  margin-left: 5%;
  border-radius: 30rpx;
}

page {
  background-color: white;
}

.margin {
  margin-left: 10%;
}

.text {
  padding: 18rpx 0;
  display: block;
}

.areas {
  width: 80%;
  margin-left: 10%;
  display: flex;
}

.off {
  width: 45%;
  height: 120rpx;
  border-radius: 30rpx;
  border: 1rpx solid orange;
  margin-left: 3%;
  text-align: center;
  margin-top: 30rpx;
  padding-top: 20rpx;
}

.on {
  width: 45%;
  height: 120rpx;
  border-radius: 30rpx;
  border: 1rpx solid orange;
  margin-left: 3%;
  text-align: center;
  margin-top: 30rpx;
  padding-top: 20rpx;
  background: linear-gradient(to right, #ffd700, #fd9526);
}

p {
  display: block;
  color: rgb(248, 101, 131);
}

.inputHeight {
  height: 100rpx;
}

.bottomImg {
  width: 80%;
  margin-left: 10%;
  height: 100rpx;
  padding: 20rpx 0;
}

.bottomView {
  width: 80%;
  margin-left: 10%;
  height: 90rpx;
  line-height: 90rpx;
}

.bottomBtn {
  width: 50%;
  border-radius: 50rpx;
  background: linear-gradient(to right, #ffd000, #fd9526, #ffd000);
  color: white;
  float: right;
  line-height: 90rpx;
}

.bottomText {
  position: fixed;
  width: 100%;
  bottom: 3%;
  text-align: center;
  font-size: 24rpx;
  color: gray;
}
