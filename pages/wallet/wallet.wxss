/* pages/wallet/wallet.wxss */

page {
  background-color: white;
  width: 750rpx;
}


.margin {
  margin-left: 5%;
}
.padding{
  margin-top: 120rpx;
}
.title {
  font-weight: bold;
  font-size: 70rpx;
}

.detail {
  font-size: 40rpx;
  color: gray;
  position: absolute;
  right: 5%;
}

.claim {
  width: 80%;
  margin-left: 10%;
  border-radius: 60rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: lightgray;
  background-color: rgb(241, 241, 241);
  position: fixed;
  bottom: 5%;
}

image {
  width: 100%;
  position: absolute;
}

.texts {
  position: relative;
  margin-left: 15%;
  padding-top: 10%;
}

.text {
  font-size: 40rpx;
}

.secondText {
  color: lightgrey;
  display: block;
}

.btn {
  position: relative;
  width: 32%;
  left: 20%;
  margin-top: -13%;
  border-radius: 40rpx;
  background: linear-gradient(to right, rgb(171, 237, 97), rgb(115, 218, 43));
  color: white;
  height: 80rpx;
  line-height: 80rpx;
  box-shadow: rgb(171, 237, 97) 0px 0px 10px;
}
